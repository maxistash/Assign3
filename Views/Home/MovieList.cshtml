@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<Assign3.Models.MovieForm>
<div>
    <h1>Your Added Movies</h1>
</div>

<table>
    <thead>
        <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
    </thead>
    <tbody>
        @foreach (Assign3.Models.MovieForm x in Model)
        {
        <tr>
            <td>@x.Category</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Lent</td>
            <td>@x.Notes</td>

        </tr>
        }
    </tbody>
</table>