@{
    ViewBag.Title = "Enter your favorite movie!";
}

@model Assign3.Models.Movie

<form asp-action="MovieForm" method="post" title="Movie Submission">
    <label asp-for="Category">Category</label>
    <select asp-for="Category">
        <option value="">Select a Category</option>
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <br />
    <input asp-for="Title" type="text" />
    <br />
    <label asp-for="Year">Year</label>
    <br />
    <input asp-for="Year" type="number" />
    <br />
    <label asp-for="Director">Director</label>
    <br />
    <input asp-for="Director" type="text"/>
    <br /><br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="">Select a Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited?</label>
    <br />
    <label>Yes</label>
    <input asp-for="Edited" type="radio" title="Yes" id="true" name="Edited" value="true" />
    <br />
    <label>No</label>
    <input asp-for="Edited" type="radio" title="No" id="false" name="Edited" value="false" />
    <br />
    <label asp-for="Lent">Lent To</label>
    <input asp-for="Lent" id="Lent" />
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" id="Notes" type="text" maxlength="25" />
    <br />

    <div asp-validation-summary="All"></div>
    <input type="submit" id="sub" title="Submit Form" />

</form>
